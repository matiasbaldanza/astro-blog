---
import BaseLayout from "../layouts/BaseLayout.astro";
const pageTitle = "About Me";

const identity = {
  firstName: "Matias",
  lastName: "Baldanza",
  country: "Argentina",
  occupation: "Frontend Developer",
  hobbies: ["Coding", "Reading", "Gaming"],
};

const skills = [
  "HTML",
  "CSS",
  "JavaScript",
  "React",
  "Node.js",
  "Git",
  "GitHub",
  "VSCode",
];

const happy = true;
const finished = false;
const goal = 3;

const skillColor = "navy";
const skillFontWeight = "bold";
const skillTextCase = "uppercase";
---

<style define:vars={{ skillColor, skillFontWeight, skillTextCase }}>
  h1 {
    color: purple;
    font-size: 4rem;
  }
  .skill {
    color: var(--skillColor);
    font-weight: var(--skillFontWeight);
    text-transform: var(--skillTextCase);
  }
</style>

<BaseLayout pageTitle={pageTitle}>
  <p>Welcome to my website! Here are a few facts about me</p>
  <ul>
    <li>My name is {identity.firstName} {identity.lastName}</li>
    <li>I am a {identity.occupation} from {identity.country}.</li>
    {
      identity.hobbies.length >= 10 && (
        <li>
          Two of my hobbies are: <em>{identity.hobbies[0].toLowerCase()}</em>{" "}
          and <em>{identity.hobbies[1].toLowerCase()}</em>
        </li>
      )
    }
  </ul>
  <p>My skills are:</p>
  <ul>
    {skills.map((skill) => <li class="skill">{skill}</li>)}
  </ul>
  {happy && <p>I am happy to be learning Astro!</p>}
  {finished && <p>I finished this tutorial!</p>}
  {
    goal === 3 ? (
      <p>My goal is to finish in 3 days.</p>
    ) : (
      <p>
        My goal is not in 3 days.{" "}
        <em>My actual goal is to finish in {goal} days</em>
      </p>
    )
  }
</BaseLayout>
